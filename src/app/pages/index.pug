extends ../layouts/base

block variables
  - var title='Страницы';
  - var pageClass='navigation';
  -
    var pages = [
      { name: 'Главная', link: '/front/page-main.html' },
    ];
  -
    var widgets = [
      { name: 'Главный блок сетка', link: '/front/widget-hero-grid.html' },
    ];

block content
  #root
  .container

    h2 Страницы
    ul
      each page in pages
        li
          a(href=page.link)= page.name

    h2 Виджеты
    ul
      each widget in widgets
        li
          a(href=widget.link)= widget.name

  style.
    .page--navigation ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      align-items: center;
      flex-wrap: wrap;
    }

    .page--navigation ul li a {
      display: flex;
      padding: 10px;
      text-decoration: none;
      border: 1px solid grey;
    }