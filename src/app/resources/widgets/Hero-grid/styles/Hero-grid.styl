.hero-grid
  &__wrapper
    display flex
    flex-direction column
    gap vw(20)
    height 100%
    height vh(vw(0))

  &__body
    display grid
    grid-template-columns 2fr 1fr
    grid-gap vw(20)
    flex 1

  &__main
    width 100%

  &__main,
  &__sidebar-block,
  &__footer
    background-color red
    border-radius vw(10)
    overflow hidden

  &__sidebar
    display flex
    flex-direction column
    gap vw(20)
    height 100%

  &__sidebar-block
    flex 1
    width 100%

  &__footer
    height vw(200)